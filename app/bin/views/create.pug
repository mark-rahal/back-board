extends layout

block content
    script(type='text/javascript' src='/javascript/validate.js')
    form(name='threadCreate' action='/thread/create' onsubmit='return validateThreadForm()' method='POST')
        label Title:
        br
        input.form-control(name='title', type='text')
        br
        label Content:
        br
        input.form-control(name='content', type='text')
        br
        input.btn.btn-primary(type='submit', value="Post Thread")