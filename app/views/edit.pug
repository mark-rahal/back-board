extends layout

block content
    //override the POST request so it becomes a PATCH request
    form(method='POST', action='/thread/edit/' + thread.Id + '?_method=PATCH')
        label Title:
        br
        input.form-control(name='title', type='text', value=thread.Title)
        br
        label Content:
        br
        input.form-control(name='content', type='text', value=thread.Content)
        br
        input.btn.btn-primary(type='submit', value="Update Thread")